<view class="container">
  <view class="tabs">
    <button bindtap="onTabChange" data-tab="pending">待处理</button>
    <button bindtap="onTabChange" data-tab="confirmed">已确认</button>
    <button bindtap="onTabChange" data-tab="completed">已完成</button>
    <button bindtap="onTabChange" data-tab="cancelled">已取消</button>
  </view>
  <view class="order-list">
    <block wx:for="{{orders}}" wx:key="id">
      <view class="order-item" bindtap="onOrderTap" data-id="{{item.id}}">
        <text>订单编号: {{item.id}}</text>
        <text>用户: {{item.user}}</text>
        <text>时间: {{item.time}}</text>
        <text>金额: {{item.amount}}</text>
      </view>
    </block>
  </view>
</view> 