/* 清空内容 */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20px;
}

.welcome {
  margin-bottom: 20px;
  font-size: 20px;
}

.options {
  display: flex;
  flex-direction: column;
}

.button-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

button {
  margin: 10px 0;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 5px;
  background-color: #007aff;
  color: white;
  transition: all 0.2s;
}
