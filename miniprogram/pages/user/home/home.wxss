@import "../../../styles/global.wxss";

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding-top: 64px;
}

.banner {
  height: 240px;
  margin: 0 -24px 24px;
  border-radius: 0 0 16px 16px;
  overflow: hidden;
}

.banner-title {
  position: absolute;
  bottom: 24px;
  left: 24px;
  color: white;
  font-size: 18px;
  font-weight: 500;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.parking-list {
  margin-top: 24px;
}

.parking-card {
  background: var(--background);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 20px;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
}

.parking-card:active {
  transform: translateY(2px);
}

.thumbnail {
  width: 100%;
  height: 160px;
  border-radius: 8px;
  margin-bottom: 12px;
}

.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
}

.location {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-primary);
}

.price {
  font-size: 16px;
  font-weight: 600;
  color: var(--primary-blue);
}

/* 搜索栏样式 */
.search-bar {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 6px 12px;
}

.search-input {
  color: white;
  font-size: 14px;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.navbar {
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  border-top: 1px solid #ddd;
}

.nav-item {
  text-align: center;
  flex: 1;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 8px 16px;
  background: var(--primary-blue);
}

.back-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.switch-icon {
  width: 20px;
  height: 20px;
  position: relative;
}

.switch-icon::before,
.switch-icon::after {
  content: '';
  position: absolute;
  width: 12px;
  height: 2px;
  background: white;
  border-radius: 1px;
  top: 50%;
  left: 50%;
}

.switch-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.switch-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
} 